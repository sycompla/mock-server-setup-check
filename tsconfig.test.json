{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "wms/webapp/**/*.test.ts",
    "wms/webapp/**/*.spec.ts",
    "wms/webapp/test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
